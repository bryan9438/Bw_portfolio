    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//code.jquery.com/jquery-1.12.4.js"></script>
    <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>


    <script>
      $(document).ready(
             function() {
                $(".hm-left-side").hide();
                $(".hm-left-side").show("slide", { direction: "left" }, 1000);

                $(".hm-right-side").hide();
                $(".hm-right-side").show("slide", { direction: "right" }, 1000);

                $(".landscape-iphone, #carouselExampleCaptions").hide();
                $("#carouselExampleCaptions, .landscape-iphone").fadeIn(1500);

                $(".ipad-abt, .centered").hide();
                $(".ipad-abt, .centered").fadeIn(1500);

                $(".contact-container").hide();
                $(".contact-container").show("slide", { direction: "left" }, 1000);

                const typed = new Typed("#typed", {
                strings:["Hello! My name is Bryan, currently based in Reading, UK. I am currently looking for an opportunity to further develop my skills and start my career in web development. I am a hard-working person dedicated to work, passionate about challenges and attention to detail. I have a BA degree in Hospitality and Event Management and have worked in the hotel industry for over 5 years. As time passed, I decided to make a career change and recently graduated from the Le Wagon Full-Stack coding Bootcamp. The course not only provides me with a wide range of knowledge but also raises my interest towards Front-end development. Furthermore, I have also completed a couple more courses about jQuery and React with Coursera to better prepare myself to step into the career industry."],
                typeSpeed: 50,
                loop: false,
                showCursor: false
              });
         });
    </script>
</html>
